---
const email = 'arnauma16@gmail.com';
const linkedIn = {
  url: 'https://www.linkedin.com/in/arnaumq',
  label: 'linkedin.com/in/arnaumq',
};
---

<section id="contact" class="py-10 md:py-20 px-8 md:px-12 lg:px-20 xl:px-32 2xl:px-40">
  <div class="max-w-5xl mx-auto text-center">
    <!-- Heading -->
    <div data-reveal>
      <p class="text-primary text-xl tracking-widest uppercase mb-4">Connect</p>
      <h2 class="font-serif text-5xl md:text-6xl text-foreground mb-4">Contact</h2>
      <p class="text-text-muted text-xl mb-12">Let's work together</p>
    </div>

    <!-- Body + links -->
    <div data-reveal style="--reveal-delay: 0.15s;">
      <p class="text-text-body text-lg leading-relaxed mb-10 max-w-xl mx-auto">
        I'm always open to discussing new opportunities, interesting projects, or ways to bring ambitious ideas to life.
      </p>

      <div class="flex flex-col sm:flex-row items-center justify-center gap-6 mb-10">
        <a
          href={`mailto:${email}`}
          class="flex items-center gap-2 text-text-body hover:text-accent transition-colors duration-200"
        >
          <!-- Mail icon -->
          <svg width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round">
            <rect x="2" y="4" width="20" height="16" rx="2" />
            <path d="m22 7-8.97 5.7a1.94 1.94 0 0 1-2.06 0L2 7" />
          </svg>
          <span>{email}</span>
        </a>
        <a
          href={linkedIn.url}
          target="_blank"
          rel="noopener noreferrer"
          class="flex items-center gap-2 text-text-body hover:text-accent transition-colors duration-200"
        >
          <!-- LinkedIn icon -->
          <svg width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round">
            <path d="M16 8a6 6 0 0 1 6 6v7h-4v-7a2 2 0 0 0-2-2 2 2 0 0 0-2 2v7h-4v-7a6 6 0 0 1 6-6z" />
            <rect x="2" y="9" width="4" height="12" />
            <circle cx="4" cy="4" r="2" />
          </svg>
          <span>{linkedIn.label}</span>
        </a>
      </div>
    </div>

    <!-- CTA buttons -->
    <div data-reveal style="--reveal-delay: 0.3s;" class="flex flex-col sm:flex-row items-center justify-center gap-4">
      <a
        href={`mailto:${email}`}
        class="inline-flex items-center justify-center px-8 py-3 rounded-sm bg-accent text-background font-medium text-xl hover:bg-accent-hover transition-colors duration-200"
      >
        Send Email
      </a>
      <a
        href={linkedIn.url}
        target="_blank"
        rel="noopener noreferrer"
        class="inline-flex items-center justify-center px-8 py-3 rounded-sm border border-border text-text-body font-medium text-xl hover:border-border-hover hover:text-foreground transition-colors duration-200"
      >
        View LinkedIn
      </a>
    </div>
  </div>
</section>
