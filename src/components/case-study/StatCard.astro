---
interface Props {
  value: string;
  label: string;
}

const { value, label } = Astro.props;
---

<div class="bg-bg-elevated border border-border rounded-sm p-6 text-center">
  <p class="font-serif text-3xl md:text-4xl text-accent mb-2">{value}</p>
  <p class="text-text-muted text-sm tracking-wide uppercase">{label}</p>
</div>
