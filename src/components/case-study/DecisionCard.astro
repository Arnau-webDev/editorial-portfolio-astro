---
interface Props {
  title: string;
  decision: string;
  rationale: string;
  tradeoff: string;
}

const { title, decision, rationale, tradeoff } = Astro.props;
---

<div class="bg-bg-elevated border border-border rounded-sm p-6 flex flex-col gap-4">
  <div>
    <p class="text-primary text-xs tracking-widest uppercase mb-1">{title}</p>
    <p class="font-serif text-lg text-foreground">{decision}</p>
  </div>
  <p class="text-text-body text-sm leading-relaxed">{rationale}</p>
  <div class="border-t border-border pt-4">
    <p class="text-text-muted text-xs tracking-widest uppercase mb-1">Tradeoff</p>
    <p class="text-text-body text-sm italic">{tradeoff}</p>
  </div>
</div>
