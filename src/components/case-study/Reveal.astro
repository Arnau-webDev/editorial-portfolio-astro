---
interface Props {
  class?: string;
  delay?: number;
  threshold?: number;
  instant?: boolean;
}

const { class: className = '', delay = 0, threshold = 0.15, instant = false } = Astro.props;
---

{instant ? (
  <div
    data-reveal-instant
    class={className}
    style={delay > 0 ? `--reveal-delay: ${delay}s;` : undefined}
  >
    <slot />
  </div>
) : (
  <div
    data-reveal
    data-reveal-threshold={threshold}
    class={className}
    style={delay > 0 ? `--reveal-delay: ${delay}s;` : undefined}
  >
    <slot />
  </div>
)}
