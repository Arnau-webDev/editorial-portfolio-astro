---
// Hero section — typing effect handled by hero-typing.ts
---

<section
  id="hero"
  class="min-h-screen flex items-center px-6 md:px-12 lg:px-20 xl:px-32 2xl:px-40 relative"
>
  <div class="max-w-[2500px] mx-auto w-full grid grid-cols-1 lg:grid-cols-2 gap-16 items-center py-0 md:py-32">
    <!-- Text column -->
    <div>
      <h1 class="font-serif text-xl sm:text-4xl md:text-8xl lg:text-9xl text-foreground leading-[0.9] tracking-tight mb-8">
        <span
          class="hero-name-span block transition-all duration-700 ease-out text-5xl sm:text-6xl md:text-8xl"
        >
          Arnau
        </span>
        <span
          class="hero-name-span block transition-all duration-700 ease-out delay-200 text-5xl sm:text-6xl md:text-8xl"
          style="transition-delay: 200ms;"
        >
          Marquilles
        </span>
      </h1>

      <!-- Role typing area -->
      <p
        class="text-sm md:text-xl tracking-widest uppercase mb-6 relative"
        style="color: #7088aa;"
      >
        <!-- Invisible placeholder to reserve height -->
        <span class="invisible">Technical Lead Frontend Engineer</span>
        <span class="absolute inset-0">
          <span id="hero-typed"></span>
          <span
            id="hero-cursor"
            class="inline-block w-[2px] h-[1em] ml-0.5 align-middle"
            style="background-color: #7088aa; animation: heroCursorBlink 1.2s step-end infinite; display: none;"
          ></span>
        </span>
      </p>

      <p
        class="hero-name-span text-text-body text-base md:text-xl leading-relaxed max-w-lg mb-10 transition-all duration-700 ease-out"
        style="transition-delay: 550ms;"
      >
        Building high-performance web applications with 6+ years of experience across Banking, Aviation, and Consulting
      </p>

      <div class="flex gap-4">
        <a
          href="#projects"
          class="px-4 py-2 md:px-6 md:py-3 bg-accent text-background text-sm md:text-xl font-medium rounded-sm hover:bg-accent-hover transition-colors duration-200"
        >
          View Projects
        </a>
        <a
          href="#contact"
          class="px-4 py-2 md:px-6 md:py-3 border border-border text-text-body text-sm md:text-xl font-medium rounded-sm hover:border-border-hover hover:text-foreground transition-colors duration-200"
        >
          Get in Touch
        </a>
      </div>
    </div>

    <!-- SVG column — hidden on mobile -->
    <div class="hidden lg:flex items-center justify-center">
      <svg
        viewBox="0 0 500 500"
        class="w-full max-w-lg"
        xmlns="http://www.w3.org/2000/svg"
        aria-hidden="true"
      >
        <!-- Large outer arcs — very slow clockwise -->
        <g style="animation: heroRotate 100s linear infinite; transform-origin: 250px 250px;">
          <path d="M 250 50 A 200 200 0 0 1 450 250" fill="none" stroke="#7088aa" stroke-width="0.5" opacity="0.8" />
          <path d="M 250 450 A 200 200 0 0 1 50 250" fill="none" stroke="#7088aa" stroke-width="0.5" opacity="0.8" />
        </g>

        <!-- Concentric circles — slow rotation -->
        <g style="animation: heroRotate 80s linear infinite; transform-origin: 250px 250px;">
          <circle cx="250" cy="250" r="190" fill="none" stroke="#7088aa" stroke-width="0.5" opacity="0.8" />
          <circle cx="250" cy="250" r="150" fill="none" stroke="#7088aa" stroke-width="0.4" opacity="0.7" />
          <circle cx="250" cy="250" r="110" fill="none" stroke="#7088aa" stroke-width="0.5" opacity="0.75" />
          <circle cx="250" cy="250" r="70" fill="none" stroke="#7088aa" stroke-width="0.4" opacity="0.7" />
          <circle cx="250" cy="250" r="30" fill="none" stroke="#7088aa" stroke-width="0.6" opacity="0.85" />
        </g>

        <!-- Dashed rings — counter rotation -->
        <g style="animation: heroRotateReverse 130s linear infinite; transform-origin: 250px 250px;">
          <circle cx="250" cy="250" r="170" fill="none" stroke="#7088aa" stroke-width="0.4" opacity="0.7" stroke-dasharray="3 14" />
          <circle cx="250" cy="250" r="130" fill="none" stroke="#7088aa" stroke-width="0.4" opacity="0.75" stroke-dasharray="1 10" />
          <circle cx="250" cy="250" r="90" fill="none" stroke="#7088aa" stroke-width="0.4" opacity="0.7" stroke-dasharray="6 8" />
        </g>

        <!-- Radial lines -->
        <g opacity="0.7">
          {[0, 30, 60, 90, 120, 150].map((angle) => (
            <>
              <line
                x1={250 + Math.cos((angle * Math.PI) / 180) * 20}
                y1={250 + Math.sin((angle * Math.PI) / 180) * 20}
                x2={250 + Math.cos((angle * Math.PI) / 180) * 200}
                y2={250 + Math.sin((angle * Math.PI) / 180) * 200}
                stroke="#7088aa"
                stroke-width="0.4"
              />
              <line
                x1={250 - Math.cos((angle * Math.PI) / 180) * 20}
                y1={250 - Math.sin((angle * Math.PI) / 180) * 20}
                x2={250 - Math.cos((angle * Math.PI) / 180) * 200}
                y2={250 - Math.sin((angle * Math.PI) / 180) * 200}
                stroke="#7088aa"
                stroke-width="0.4"
              />
            </>
          ))}
        </g>

        <!-- Accent crossing lines -->
        <g opacity="0.7">
          <line x1="80" y1="120" x2="420" y2="380" stroke="#7088aa" stroke-width="0.5" />
          <line x1="420" y1="120" x2="80" y2="380" stroke="#7088aa" stroke-width="0.5" />
        </g>

        <!-- Center diamond — slow counter-rotate -->
        <g style="animation: heroRotate 70s linear infinite reverse; transform-origin: 250px 250px;">
          <polygon points="250,215 285,250 250,285 215,250" fill="none" stroke="#7088aa" stroke-width="0.8" opacity="0.85" />
          <polygon points="250,228 272,250 250,272 228,250" fill="none" stroke="#7088aa" stroke-width="0.5" opacity="0.75" />
        </g>

        <!-- Small triangles -->
        <g opacity="0.7" style="animation: heroRotate 110s linear infinite; transform-origin: 250px 250px;">
          <polygon points="130,90 140,75 150,90" fill="none" stroke="#7088aa" stroke-width="0.6" />
          <polygon points="360,150 370,135 380,150" fill="none" stroke="#7088aa" stroke-width="0.5" />
          <polygon points="100,350 110,335 120,350" fill="none" stroke="#7088aa" stroke-width="0.6" />
          <polygon points="380,370 390,355 400,370" fill="none" stroke="#7088aa" stroke-width="0.5" />
        </g>

        <!-- Floating dots -->
        {[
          { cx: 120, cy: 100, r: 2, delay: '0s', op: '0.9' },
          { cx: 380, cy: 130, r: 1.5, delay: '2s', op: '0.7' },
          { cx: 90, cy: 330, r: 2.5, delay: '4s', op: '0.9' },
          { cx: 400, cy: 360, r: 1.5, delay: '1s', op: '0.7' },
          { cx: 250, cy: 60, r: 2, delay: '3s', op: '0.7' },
          { cx: 160, cy: 400, r: 1.5, delay: '5s', op: '0.7' },
          { cx: 340, cy: 280, r: 2, delay: '2.5s', op: '0.7' },
          { cx: 140, cy: 210, r: 1.5, delay: '1.5s', op: '0.7' },
          { cx: 300, cy: 80, r: 1, delay: '3.5s', op: '0.7' },
          { cx: 200, cy: 440, r: 1, delay: '0.5s', op: '0.7' },
          { cx: 420, cy: 230, r: 2, delay: '4.5s', op: '0.9' },
          { cx: 70, cy: 180, r: 1.5, delay: '6s', op: '0.7' },
        ].map((dot) => (
          <circle
            cx={dot.cx}
            cy={dot.cy}
            r={dot.r}
            fill="#7088aa"
            opacity={dot.op}
            style={`animation: heroDotFloat 10s ease-in-out infinite; animation-delay: ${dot.delay};`}
          />
        ))}

        <!-- Tiny accent ring marks -->
        {[
          { cx: 250, cy: 60 },
          { cx: 440, cy: 250 },
          { cx: 250, cy: 440 },
          { cx: 60, cy: 250 },
        ].map((p) => (
          <circle cx={p.cx} cy={p.cy} r="4" fill="none" stroke="#7088aa" stroke-width="0.6" opacity="0.8" />
        ))}
      </svg>
    </div>
  </div>

  <!-- Scroll indicator -->
  <div class="absolute bottom-10 left-1/2 -translate-x-1/2 flex flex-col items-center gap-3">
    <span class="text-text-muted text-[10px] tracking-[0.3em] uppercase">Scroll</span>
    <div class="w-px h-8 bg-border relative overflow-hidden">
      <div
        class="w-full h-full absolute top-0"
        style="background: linear-gradient(to bottom, hsl(var(--border)), transparent); animation: heroScrollLine 2s ease-in-out infinite;"
      ></div>
    </div>
  </div>
</section>

<script>
  import '../scripts/hero-typing.ts';
</script>
