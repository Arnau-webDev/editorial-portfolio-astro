---
import BaseLayout from '../layouts/BaseLayout.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
---

<BaseLayout title="404 â€” Page Not Found | Arnau Marquilles" description="The page you're looking for doesn't exist.">
  <Header />
  <main class="pt-16 min-h-[80vh] flex items-center px-8 md:px-12 lg:px-20 xl:px-32 2xl:px-40">
    <div class="max-w-[2500px] mx-auto">
      <p class="text-primary text-base tracking-widest uppercase mb-6">404</p>
      <h1 class="font-serif text-4xl md:text-6xl text-foreground mb-6">Page not found</h1>
      <p class="text-text-body text-lg leading-relaxed mb-10 max-w-lg">
        The page you're looking for doesn't exist or has been moved.
      </p>
      <a
        href="/"
        class="inline-flex items-center gap-2 px-6 py-3 bg-accent text-background font-medium rounded-sm hover:bg-accent-hover transition-colors duration-200"
      >
        <svg width="14" height="14" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round">
          <path d="M19 12H5" />
          <path d="m12 19-7-7 7-7" />
        </svg>
        Back to home
      </a>
    </div>
  </main>
  <Footer />
</BaseLayout>
